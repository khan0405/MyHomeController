extends layout
block stylesheets
    style.
        .btnNo {
            font-size: 2em;
        }
        .rs2 {
            height: 128px;
            padding: 0px;
        }
        a.btn-large {
            padding: 0px;
            text-align: center;
        }
        div.rs2 a {
            width: 100%;
            height: 54px;
            line-height: 56px;
            color: #ffffff;
        }
        div.caption {
            text-align: center;
            position: absolute;
            width: 100%;
            display: list-item;
        }
        span.middle {
            padding: 0px;
            display: table-cell;
            vertical-align: middle;
            width: 100px;
            line-height: normal;
        }

block content
    div.container.wrapper
        div.row
            div.col.s4: a#btnPower.btn-large.waves-effect.waves-light.red.fillWidth.btnNo
                i.fa.fa-power-off
            div.col.s4 &nbsp;
            div.col.s4: a#btnInput.btn-large.waves-effect.waves-light.fillWidth 외부입력
        div.row.center-align
            div.col.s9
                -for (var i = 0; i < 3; i++) {
                    div.row.center-align
                        -for (var j = 1; j < 4; j++) {
                            -var index = i*3+j;
                            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo(id='btn'+(index)) #{index}
                        -}
                -}
                div.row.center-align
                    div.col.s4: a#btnMute.btn-large.waves-effect.waves-light.fillWidth.
                        mute
                    div.col.s4: a#btn0.btn-large.waves-effect.waves-light.fillWidth.btnNo.
                        0
                    div.col.s4: a#btnRet.btn-large.waves-effect.waves-light.fillWidth.
                        ret
            div.col.s3
                div.row.rs2.btn-large.waves-effect.waves-light.fillWidth
                    div.caption
                        span.middle 음량
                    div.s12
                        div.row
                            div.col.s12
                                a#btnSoundUp.btn-flat.btnNo +
                        div.row
                            div.col.s12
                                a#btnSoundDown.btn-flat.btnNo -
                div.row.rs2.btn-large.waves-effect.waves-light.fillWidth
                    div.caption
                        span.middle 채널
                    div.s12
                        div.row
                            div.col.s12
                                a#btnChannelUp.btn-flat.btnNo +
                        div.row
                            div.col.s12
                                a#btnChannerDown.btn-flat.btnNo -

        div.row.center-align
            div.col.s4 &nbsp;
            div.col.s4: a#btnUp.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-chevron-up
            div.col.s4 &nbsp;
        div.row.center-align
            div.col.s4: a#btnLeft.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-chevron-left
            div.col.s4: a#btnOk.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-circle-o
            div.col.s4: a#btnRight.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-chevron-right
        div.row.center-align
            div.col.s4 &nbsp;
            div.col.s4: a#btnDown.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.i.fa.fa-chevron-down
            div.col.s4 &nbsp;