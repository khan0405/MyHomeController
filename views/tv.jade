extends layout
block stylesheets
    style.
        
        .btnNo {
            font-size: 2em;
        }
        .rs2 {
            height: 128px;
            padding: 0px;
        }
        a.btn-large {
            padding: 0px;
            text-align: center;
        }
        div.rs2 a {
            width: 100%;
            height: 54px;
            line-height: 56px;
            color: #ffffff;
        }
        div.caption {
            text-align: center;
            position: absolute;
            width: 100%;
            display: list-item;
        }

        div.middle, span.middle {
            padding: 0px;
            display: table;
            vertical-align: middle;
            width: 100%;
            line-height: normal;
        }
        div.row.noBottomMargin {
            margin-bottom: 0px;
        }
        #btnSelectTvCable i.right {
            font-size: 1rem;
            position: absolute;
            top: 0;
            right: 10px;
        }
        .inline-center {
            display: inline-flex;
            text-align: center;
        }
block headScripts
    script(src='/javascripts/tv.js')
block content
    div.container.wrapper
        div.row
            div.col.s4
                a#btnPower.btn-large.waves-effect.waves-light.red.fillWidth.btnNo.btn(data-button='powerOn')
                    i.fa.fa-power-off
            div.col.s4 &nbsp;
            div.col.s4: a#btnInput.btn-large.waves-effect.waves-light.fillWidth.btn 외부입력
        div.row.center-align.noBottomMargin
            div.col.s9
                -for (var i = 0; i < 3; i++) {
                    div.row.center-align
                        -for (var j = 1; j < 4; j++) {
                            -var index = i*3+j;
                            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn(id='btn'+index).
                                #{index}
                        -}
                -}
                div.row.center-align
                    div.col.s4: a#btnMute.btn-large.waves-effect.waves-light.fillWidth.btn.
                        mute
                    div.col.s4: a#btn0.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn.
                        0
                    div.col.s4: a#btnRet.btn-large.waves-effect.waves-light.fillWidth.btn.
                        ret
            div.col.s3
                div.row.rs2.btn-large.waves-effect.waves-light.fillWidth
                    div.caption
                        span.middle 음량
                    div.s12
                        div.row
                            div.col.s12
                                a#btnSoundUp.btn-flat.btnNo.btn +
                        div.row
                            div.col.s12
                                a#btnSoundDown.btn-flat.btnNo.btn -
                div.row.rs2.btn-large.waves-effect.waves-light.fillWidth
                    div.caption
                        span.middle 채널
                    div.s12
                        div.row
                            div.col.s12
                                a#btnChannelUp.btn-flat.btnNo.btn +
                        div.row
                            div.col.s12
                                a#btnChannerDown.btn-flat.btnNo.btn -

        div.row.center-align
            div.col.s4 &nbsp;
            div.col.s4: a#btnUp.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn
                i.fa.fa-chevron-up
            div.col.s4
                a#btnSelectTvCable.btn-large.waves-effect.waves-light.teal.fillWidth.dropdown-button(data-activates="selectTvCable", data-select="1")
                    div.inline-center TV
                    i.fa.fa-chevron-down.right
        div.row.center-align
            div.col.s4: a#btnLeft.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn
                i.fa.fa-chevron-left
            div.col.s4: a#btnOk.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn
                i.fa.fa-circle-o
            div.col.s4: a#btnRight.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn
                i.fa.fa-chevron-right
        div.row.center-align
            div.col.s4 &nbsp;
            div.col.s4: a#btnDown.btn-large.waves-effect.waves-light.fillWidth.btnNo.btn
                i.fa.i.fa.fa-chevron-down
            div.col.s4 &nbsp;

        ul#selectTvCable.dropdown-content
            li: a.btnModeSelect.center-align.waves-effect.waves-light(href="#!", data-select="1") TV
            li: a.btnModeSelect.center-align.waves-effect.waves-light(href="#!", data-select="2") 케이블