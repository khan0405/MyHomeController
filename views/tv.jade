extends layout
block stylesheets
    style.
        .btnNo {
            font-size: 2em;
        }
        .rs2 {
            height: 128px;
            padding: 0px;
        }
        a.btn-large {
            padding: 0px;
            text-align: center;
        }
        div.rs2 a {
            width: 100%;
            height: 54px;
            line-height: 56px;
            color: #ffffff;
        }
        div.caption {
            text-align: center;
            position: absolute;
            width: 100%;
            display: list-item;
        }
        span.middle {
            padding: 0px;
            display: table-cell;
            vertical-align: middle;
            width: 100px;
            line-height: normal;
        }



block content
    div.container.wrapper
        div.row
            div.col.s4: a.btn-large.waves-effect.waves-light.red.fillWidth.btnNo
                i.fa.fa-power-off
            div.col.s4 &nbsp;
            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth 외부입력
        div.row.center-align
            div.col.s9
                -for (var i = 0; i < 3; i++) {
                    div.row.center-align
                        div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo &nbsp;&nbsp;#{i*3+1}&nbsp;&nbsp;
                        div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo &nbsp;&nbsp;#{i*3+2}&nbsp;&nbsp;
                        div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo &nbsp;&nbsp;#{i*3+3}&nbsp;&nbsp;
                -}
                div.row.center-align
                    div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth mute
                    div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo &nbsp;&nbsp;0&nbsp;&nbsp;
                    div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth ret
            div.col.s3
                div.row.rs2.btn-large.waves-effect.waves-light.fillWidth
                    div.caption
                        span.middle 음량
                    div.s12
                        div.row
                            div.col.s12
                                a.btn-flat.btnNo +
                        div.row
                            div.col.s12
                                a.btn-flat.btnNo -
                div.row.rs2.btn-large.waves-effect.waves-light.fillWidth
                    div.caption
                        span.middle 채널
                    div.s12
                        div.row
                            div.col.s12
                                a.btn-flat.btnNo +
                        div.row
                            div.col.s12
                                a.btn-flat.btnNo -

        div.row.center-align
            div.col.s4 &nbsp;
            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-chevron-up
            div.col.s4 &nbsp;
        div.row.center-align
            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-chevron-left
            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-circle-o
            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.fa-chevron-right
        div.row.center-align
            div.col.s4 &nbsp;
            div.col.s4: a.btn-large.waves-effect.waves-light.fillWidth.btnNo
                i.fa.i.fa.fa-chevron-down
            div.col.s4 &nbsp;